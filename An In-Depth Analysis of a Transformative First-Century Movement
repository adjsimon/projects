    <script>
        const vibrantPalette = {
            blue: '#00A0B0',
            brown: '#6A4A3C',
            red: '#CC333F',
            orange: '#EB6841',
            yellow: '#EDC951'
        };

        function wrapLabel(str, maxWidth) {
            if (typeof str !== 'string' || str.length <= maxWidth) {
                return str;
            }
            const words = str.split(' ');
            let lines = [];
            let currentLine = '';
            words.forEach(word => {
                if ((currentLine + word).length > maxWidth) {
                    lines.push(currentLine.trim());
                    currentLine = '';
                }
                currentLine += word + ' ';
            });
            lines.push(currentLine.trim());
            return lines;
        }
        
        const sharedTooltipOptions = {
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(tooltipItems) {
                            const item = tooltipItems[0];
                            let label = item.chart.data.labels[item.dataIndex];
                            if (Array.isArray(label)) {
                              return label.join(' ');
                            }
                            return label;
                        }
                    }
                }
            }
        };

        document.addEventListener('DOMContentLoaded', () => {

            const kpiElement = document.getElementById('kpi-sources');
            let count = 0;
            const target = 9;
            const duration = 2000;
            const interval = duration / target;
            const increment = () => {
                count++;
                kpiElement.innerText = count;
                if (count < target) {
                    setTimeout(increment, interval);
                }
            };
            increment();

            const coreThemesCtx = document.getElementById('coreThemesChart').getContext('2d');
            new Chart(coreThemesCtx, {
                type: 'bubble',
                data: {
                    datasets: [{
                        label: 'Love & Compassion',
                        data: [{x: 15, y: 20, r: 25}],
                        backgroundColor: vibrantPalette.red + 'BF'
                    }, {
                        label: 'Kingdom of God',
                        data: [{x: 30, y: 35, r: 30}],
                        backgroundColor: vibrantPalette.blue + 'BF'
                    }, {
                        label: 'Justice for Poor',
                        data: [{x: 45, y: 15, r: 22}],
                        backgroundColor: vibrantPalette.orange + 'BF'
                    }, {
                        label: 'Forgiveness',
                        data: [{x: 65, y: 25, r: 18}],
                        backgroundColor: vibrantPalette.yellow + 'BF'
                    }, {
                        label: 'Humility & Service',
                        data: [{x: 80, y: 12, r: 20}],
                        backgroundColor: vibrantPalette.brown + 'BF'
                    }]
                },
                options: {
                     responsive: true,
                     maintainAspectRatio: false,
                     plugins: {
                        legend: { display: false },
                        tooltip: {
                             callbacks: {
                                label: function(context) {
                                    return context.dataset.label + ': (Prominence: ' + context.raw.r + ')';
                                }
                            }
                        }
                     },
                     scales: {
                         x: { display: false },
                         y: { display: false }
                     }
                }
            });

            const gospelRadarCtx = document.getElementById('gospelRadarChart').getContext('2d');
            new Chart(gospelRadarCtx, {
                type: 'radar',
                data: {
                    labels: ['Prophecy Fulfillment', 'Universality Focus', 'Divine Identity Focus', 'Action-Oriented Narrative', 'Social Justice Emphasis'],
                    datasets: [{
                        label: 'Matthew',
                        data: [9, 6, 7, 5, 7],
                        backgroundColor: vibrantPalette.blue + '40',
                        borderColor: vibrantPalette.blue,
                        pointBackgroundColor: vibrantPalette.blue
                    }, {
                        label: 'Mark',
                        data: [6, 5, 6, 9, 4],
                         backgroundColor: vibrantPalette.red + '40',
                        borderColor: vibrantPalette.red,
                        pointBackgroundColor: vibrantPalette.red
                    }, {
                        label: 'Luke',
                        data: [7, 9, 6, 7, 9],
                         backgroundColor: vibrantPalette.orange + '40',
                        borderColor: vibrantPalette.orange,
                        pointBackgroundColor: vibrantPalette.orange
                    }, {
                        label: 'John',
                        data: [5, 8, 10, 4, 3],
                         backgroundColor: vibrantPalette.yellow + '40',
                        borderColor: vibrantPalette.yellow,
                        pointBackgroundColor: vibrantPalette.yellow
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: 'rgba(0, 0, 0, 0.1)' },
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            pointLabels: { font: { size: 12 } },
                            ticks: {
                                backdropColor: 'transparent',
                                stepSize: 2
                            }
                        }
                    },
                    plugins: {
                         legend: {
                            position: 'top',
                         }
                    }
                }
            });
            
            const externalPerceptionCtx = document.getElementById('externalPerceptionChart').getContext('2d');
            const externalLabels = [
                'Tacitus (Roman Historian)', 
                'Suetonius (Roman Historian)', 
                'Pliny the Younger (Roman Governor)', 
                'The Talmud (Jewish Rabbinic Text)', 
                'Lucian (Greek Satirist)', 
                'Mara Bar Serapion (Syrian Philosopher)'
            ];
            new Chart(externalPerceptionCtx, {
                type: 'bar',
                data: {
                    labels: externalLabels.map(label => wrapLabel(label, 16)),
                    datasets: [{
                        label: 'Perception of the Movement',
                        data: [
                            'Pernicious Superstition', 
                            'New and Impious Superstition', 
                            'Worship Christ as God; Refuse to Curse', 
                            'Practiced Sorcery and Led Israel Astray',
                            'Worship a Crucified Man',
                            'Led by a Wise King'
                        ],
                        backgroundColor: [
                            vibrantPalette.red,
                            vibrantPalette.red,
                            vibrantPalette.blue,
                            vibrantPalette.orange,
                            vibrantPalette.orange,
                            vibrantPalette.yellow
                        ],
                        borderColor: '#ffffff',
                        borderWidth: 1
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    ...sharedTooltipOptions,
                    scales: {
                        x: { display: false },
                        y: { 
                             ticks: {
                                font: { size: 12 }
                             }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                             callbacks: {
                                label: function(context) {
                                    return context.raw;
                                }
                            }
                        }
                    }
                }
            });

            const demographicsDonutCtx = document.getElementById('demographicsDonutChart').getContext('2d');
            new Chart(demographicsDonutCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Jewish Adherents', 'Greek Adherents', 'Marginalized Peoples'],
                    datasets: [{
                        data: [40, 35, 25],
                        backgroundColor: [vibrantPalette.blue, vibrantPalette.orange, vibrantPalette.yellow],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 10,
                                boxWidth: 12
                            }
                        }
                    }
                }
            });

            // LLM Integration for Core Teachings Summary
            const generateSummaryBtn = document.getElementById('generateSummaryBtn');
            const summaryOutput = document.getElementById('summaryOutput');

            generateSummaryBtn.addEventListener('click', async () => {
                summaryOutput.innerHTML = '<p class="text-gray-500 text-sm">Generating summary...</p>';
                summaryOutput.classList.remove('hidden');

                const prompt = "Summarize the core teachings of Jesus of Nazareth, focusing on themes like the Kingdom of God, love, forgiveness, justice for the poor, humility, and service, as understood from historical and ancient texts. Keep the summary concise, around 100-150 words.";
                
                try {
                    let chatHistory = [];
                    chatHistory.push({ role: "user", parts: [{ text: prompt }] });
                    const payload = { contents: chatHistory };
                    const apiKey = "";
                    const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });

                    const result = await response.json();
                    if (result.candidates && result.candidates.length > 0 &&
                        result.candidates[0].content && result.candidates[0].content.parts &&
                        result.candidates[0].content.parts.length > 0) {
                        const text = result.candidates[0].content.parts[0].text;
                        summaryOutput.innerHTML = `<p class="text-gray-800">${text}</p>`;
                    } else {
                        summaryOutput.innerHTML = '<p class="text-red-500">Error: Could not generate summary. Please try again.</p>';
                        console.error('Unexpected API response structure:', result);
                    }
                } catch (error) {
                    summaryOutput.innerHTML = '<p class="text-red-500">Error: Failed to connect to the API. Please check your network connection.</p>';
                    console.error('API call error:', error);
                }
            });
        });
    </script>
